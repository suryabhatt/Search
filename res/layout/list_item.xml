<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" 
    android:onClick="updateItem"
    android:longClickable="true">
    
    <ImageView android:layout_alignParentLeft="true" android:layout_width="50dip"
        android:layout_height="50dip" android:id="@+id/image"
        android:contentDescription="@string/item_location_image" 
        android:src="@android:drawable/ic_menu_gallery"/>"
    <TextView android:layout_toRightOf="@id/image" android:id="@+id/itemName"
        android:layout_alignParentTop="true" android:layout_width="0dp"
        android:layout_alignParentRight="true" android:layout_height="wrap_content"/>
    <TextView android:layout_toRightOf="@id/image" android:id="@+id/location"
        android:layout_alignParentBottom="true" android:layout_width="0dp"
        android:layout_alignParentRight="true" android:layout_height="wrap_content"
        android:layout_below="@id/itemName"/>
	<TextView android:visibility="invisible" android:id="@+id/itemId" android:layout_height="0dp"
	    android:layout_width="0dip"/>
</RelativeLayout>
